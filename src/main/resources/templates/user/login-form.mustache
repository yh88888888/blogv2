{{> layout/header}}

<div class="container p-5">


    <div class="card">
        <div class="card-header"><b>로그인을 해주세요</b></div>
        <div class="card-body">
            <form action="/login" method="post" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Enter username" name="username" value="ssar">

                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Enter password" name="password"
                           value="1234">
                </div>
                <!-- ✅ 공개 여부 체크박스 -->
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="true" name="isUsernameCheck" checked>
                    <label class="form-check-label" for="isUsernameCheck">
                        아이디를 기억하겠습니까?
                    </label>
                </div>
                <button type="submit" class="btn btn-primary form-control">로그인</button>
            </form>
        </div>
    </div>
</div>

{{> layout/footer}}